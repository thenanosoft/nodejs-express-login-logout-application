<%- include('header') -%>

    <div class="text-center center-div" id="login">
        <div class="container w-25 border py-5">
            <% if(locals.logout) { %>
                <div class="alert alert-success text-center">
                    <%= logout%>
                </div>
            <% } %>
            <div class="title pb-5">
                <h2 class="font-weight-bold">Login System</h2>
                <span>Login system for the existing users</span>
            </div>
            <form action="/routes/login" method="POST" class="p-3"> 
                <div class="form-group pb-3">
                    <input type="email" class="form-control" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Password">
                </div>

                <button type="submit" class="btn btn-success my-3 rounded-0">Submit</button>
            </form>
        </div>
    </div>

<%- include('header') -%>